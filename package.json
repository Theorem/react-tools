{
  "name": "@theorem/react",
  "version": "1.0.1",
  "description": "Theorem React tools",
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsc --project tsconfig.build.json",
    "ci": "npm run verify",
    "format": "prettier --write '{docs,src,typings}/**/*.{json,md,ts,tsx}' *.{json,md,ts,tsx}",
    "format-verify": "prettier --check '{docs,src,typings}/**/*.{json,md,ts,tsx}' *.{json,md,ts,tsx}",
    "prepublishOnly": "npm run verify && npm run build",
    "start": "ava --watch",
    "start-building": "rm -rf dist && NODE_ENV=production tsc --watch",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run format-verify && npm run test"
  },
  "dependencies": {
    "use-memo-one": "^1.1.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.13",
    "@types/react-test-renderer": "^16.9.1",
    "ava": "^2.4.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "ts-node": "^8.5.2",
    "typescript": "3.7.2"
  },
  "browser": "dist/index.js",
  "engines": {
    "node": ">=10.10.0",
    "npm": ">=6.13.1"
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/lib/test"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "repository": "git@github.com:citrusbyte/react-tools.git",
  "sideEffects": false,
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "sources": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "timeout": "3s"
  }
}
