{
  "name": "@theorem/react",
  "version": "3.2.0",
  "description": "Theorem React tools",
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production tsc --project tsconfig.build.json",
    "format": "prettier --write '{docs,src,typings}/**/*.{js,json,md,ts,tsx}' '*.{js,json,md,ts,tsx}'",
    "format-verify": "prettier --check '{docs,src,typings}/**/*.{js,json,md,ts,tsx}' '*.{js,json,md,ts,tsx}'",
    "lint": "eslint --ext js,jsx,ts,tsx src",
    "prepublishOnly": "npm run verify && npm run build",
    "start": "ava --watch",
    "start-building": "rm -rf dist && NODE_ENV=production tsc --watch",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm run format-verify && npm run test"
  },
  "dependencies": {
    "@types/color-convert": "^1.9.0",
    "color-convert": "^2.0.1",
    "parse-css-color": "^0.1.2",
    "react-nano-spinner": "^1.3.0",
    "use-memo-one": "^1.1.1"
  },
  "devDependencies": {
    "@theorem/eslint-plugin": "^5.1.0",
    "@types/react": "^16.9.53",
    "@types/react-test-renderer": "^16.9.3",
    "ava": "^3.13.0",
    "eslint": "^7.12.0",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.0-beta"
  },
  "browser": "dist/index.js",
  "engines": {
    "node": ">=14.14.0",
    "npm": ">=6.13.1"
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/lib/test"
  ],
  "license": "ISC",
  "module": "dist/index.js",
  "repository": "git@github.com:Theorem/react-tools.git",
  "sideEffects": false,
  "types": "dist/index.js"
}
